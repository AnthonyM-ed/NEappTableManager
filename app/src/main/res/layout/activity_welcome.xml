<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".WelcomeActivity">


    <ImageView
        android:id="@+id/backgroundImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3"
        android:background="@drawable/bg_image"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/AppImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/ic_app_icon"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/welcomeTitle"
        android:layout_marginBottom="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soluciones Moviles S.A.C."
        android:textSize="30sp"
        android:textColor="@android:color/white"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido a tu aplicaciÃ³n"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/welcomeTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:id="@+id/welcomeText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="para gestionar tablas."
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/buttonStart"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Comenzar"
        android:padding="10dp"
        android:textSize="14sp"
        android:layout_below="@id/welcomeText2"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_login"
        android:textColor="@android:color/white" />
</RelativeLayout>
