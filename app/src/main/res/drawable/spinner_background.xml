<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fondo del Spinner -->
    <item>
        <shape android:shape="rectangle">
            <padding android:top="6dp" />
            <padding android:bottom="6dp" />
            <padding android:left="5dp" />
            <padding android:right="5dp" />
            <solid android:color="#F8F8F8"/>
            <stroke android:width="1dp" android:color="#DEDEDE"/> <!-- Color y grosor del borde -->
            <corners android:radius="5dp"/> <!-- Esquinas redondeadas -->
        </shape>
    </item>

    <!-- Espacio para el Ã­cono de la flecha -->
    <item android:drawable="@drawable/ic_arrow_drop_down" android:gravity="right|center_vertical"/>
</layer-list>
